<!DOCTYPE html>
<html class="has-sticky-footer">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/CustomStyle/style.css")
    @Styles.Render("~/Content/CustomStyle/offcanvas.css")
    @Styles.Render("~/Content/CustomStyle/media.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <header name="top" class="page-header container">
            <div class="text-center col-md-12">
                <div id="logo" class="col-md-2">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src="~/Content/img/logo.png" alt="logo library" />
                    </a>
                </div>
                <div id="header-title" class="col-md-4 col-md-offset-2">
                    <a href='@Url.Action("Index", "Home")'>
                        <h1>Library</h1>
                    </a>
                </div>
            </div>


        </header>
        <div class="row">
            <p class="pull-right visible-xs col-sm-10 col-md-10">
                <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
            </p>
        </div>
        <div class="row row-offcanvas row-offcanvas-right">

            <section class="col-sm-10 col-md-10 main">

                @RenderBody()

            </section>

            <nav id="navbar" class="col-sm-2 col-md-2 sidebar-offcanvas" id="sidebar" ">
                <ul class="nav nav-sidebar">
                    <li>
                        @Html.ActionLink("Main", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Guest", "Index", "Guest")
                    </li>
                    <li>
                        @Html.ActionLink("Survey", "Index", "Anket")
                    </li>
                </ul>
        </div>
        </nav>
    </div>


    <footer class="footer">
        <!--  col-md-12  -->
        <div class="text-center col-md-12">
            <p class="text-center">Copyright &copy; @DateTime.Now.Year - Andrii Slyzhuk</pclass="text-center">
            <p class="text-center"><a href="mailto:paradoxical.ai@gmail.com">paradoxical.ai@gmail.com</a></p>
            <div class="text-center">
                <a class="text-center" href="http://www.freepik.com">Designed by Freepik</a>
            </div>
            <a href="#top">
                <img src="~/Content/img/arrow.png" alt="arrow to up" />
            </a>
        </div>
    </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/CustomJS")
    @if (ViewBag.Title == "EditArticle")
    {
        @Scripts.Render("~/bundles/CustomJSEditArticle")
    }

</body>
</html>
