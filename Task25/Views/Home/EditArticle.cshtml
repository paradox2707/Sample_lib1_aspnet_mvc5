@model Task25.Models.ArticleViewModel

@{
    ViewBag.Title = "EditArticle";
}

@using (Html.BeginForm("Article", "Home", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.Date)
    @Html.LabelFor(x => x.Title)
    <br />
    @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
    <br />
    <br />

    @Html.LabelFor(x => x.Text)
    <br />
    @Html.TextAreaFor(x => x.Text, new { @class = "form-control", placeholder = "Write something..", style = "height:200px" })
    <br />
    <br />

    @Html.LabelFor(x => x.Tegs)
<ul>
    @{int numberTegs = Model.Tegs == null ? 0 : Model.Tegs.Count();}
    @for (int i = 0; i < numberTegs; i++)
    {
        <li class="input-group" id="teg_1">
            <div class="input-group">
                @Html.EditorFor(m => m.Tegs[i].Name, new { htmlAttributes = new { @class = "form-control tegs inactive" } })
                <span class="input-group-btn">
                    <button class="btn btn-default btn-teg" type="button">+</button><button class="btn btn-default btn-teg" type="button">-</button>
                </span>
            </div><br />
        </li>
    }

    @if (numberTegs == 0)
    {
        <li class="input-group" id="teg_1">
            <div class="input-group">
                <input class="form-control tegs text-box single-line" id="Tegs_0__Name" name="Tegs[0].Name" type="text">
                <span class="input-group-btn">
                    <button class="btn btn-default btn-teg" type="button">+</button><button class="btn btn-default btn-teg" type="button">-</button>
                </span>
            </div><br />
        </li>
    }

</ul>

    <input type="submit" class="btn btn-primary" value="Submit">
}

